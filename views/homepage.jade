extends ./layout


block body
  header.header
    h3#main-title.container
      | A brand new app.
    h4.container
      = 'You\'re looking at: '
      code
        = view.pathFromApp + '.' + view.ext

  section#main.container.clearfix

block templates
  script#user-list-tmpl(type='text/html')
    table.full-width.user-list
      thead
        tr
          th #
          th Username
          th Email
          th DOB
          th Created
          th Updated

  script#user-row-tmpl(type='text/html')
    tr
      td <%= id %>
      td <%= username %>
      td <%= email %>
      td <%= dob %>
      td <%= createdAt %>
      td <%= updatedAt %>
