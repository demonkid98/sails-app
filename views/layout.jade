doctype html
html
  head
    title= title

    // Viewport mobile tag for sensible mobile support
    meta(name='viewport',content='width=device-width, initial-scale=1, maximum-scale=1')

    // STYLES
    link(rel="stylesheet", href="/styles/dependencies/normalize.css")
    link(rel="stylesheet", href="/styles/dependencies/foundation.css")
    link(rel="stylesheet", href="/styles/importer.css")
    // STYLES END
    block styles

    script(src='/js/dependencies/modernizr.js')
  body
    block body

    // The linker searches for this tag and adds js.  If there's no linker, we point to sails.io.js
    // SCRIPTS
    script(src="/js/dependencies/sails.io.js")
    script(src="/js/dependencies/jquery.min.js")
    script(src="/js/dependencies/foundation.min.js")
    script(src="/js/scripts.js")
    // SCRIPTS END
